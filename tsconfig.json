{
  "extends": "@tsconfig/node23/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
