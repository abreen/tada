{
  "type": "array",
  "items": {
    "type": "object",
    "required": ["title", "links"],
    "properties": {
      "title": {
        "type": "string"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["text"],
          "properties": {
            "text": {
              "type": "string"
            },
            "internal": {
              "type": "string",
              "pattern": "^\\/.*$"
            },
            "external": {
              "type": "string",
              "pattern": "^https?:\\/\\/.*$"
            },
            "disabled": {
              "type": "boolean"
            }
          },
          "oneOf": [
            {
              "required": ["internal"]
            },
            {
              "required": ["external"]
            }
          ],
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
